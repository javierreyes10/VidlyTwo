
@model List<VidlyTwo.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
<br />
@if (Model.Any())
{
    <table class="table table-striped table-hover table-bordered">
        <thead><tr><th>Customer</th></tr></thead>
        @foreach (var customer in Model)
        {
            <tr><td> @Html.ActionLink(@customer.Name, "Details", "Customers", new { id = @customer.Id }, null)</td></tr>
        }
    </table>

}
else
{
    <p>We don't have any customers yet.</p>

}

