@model IEnumerable<VidlyTwo.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    @foreach (var movie in Model)
    {
        <tr>

            <td>
                <p>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = @movie.Id }, null)</p>
            </td>
            <td>
                <p>@movie.Genre.Name</p>
            </td>
        </tr>
        
    }
</table>
