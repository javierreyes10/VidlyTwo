@model IEnumerable<VidlyTwo.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<br />
<br />

<table id="movies" class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });

        });
    </script>
}
